{% if named_exists.stat.exists == False %}
$TTL    604800
@       IN      SOA     {{dns_hostname}}. admin.{{zone_name}}. (
            3       ; Serial
            604800     ; Refresh
            86400     ; Retry
            2419200     ; Expire
            604800 )   ; Negative Cache TTL
;
; name servers - NS records
    IN      NS      {{dns_hostname}}.
{% endif %}

; name servers - A records
{{dns_hostname}} IN A {{dns_ip}}

{% for host in groups['esx'] %}
{{ hostvars[host]['inventory_hostname'].split(".")[0] }} IN A {{ hostvars[host]['ansible_host'] }}
{% endfor %}

{% for host in groups['vcsa'] %}
{{ hostvars[host]['inventory_hostname'].split(".")[0] }} IN A {{ hostvars[host]['ansible_host'] }}
{% endfor %}
